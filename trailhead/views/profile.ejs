<% layout('partials/boilerplate', {authenticated:authenticated}) -%>


<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <%if (profile == 'google') { %> 
                    <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>
                <% } %> 
                <%if (profile == 'facebook') { %> 
                    <h3 class="text-primary"><span class="fa fa-facebook"></span> facebook</h3>
                <% } %> 
                <%if (profile == 'linkedin') { %> 
                    <h3 class="text-primary"><span class="fa fa-linkedin"></span> linkedin</h3>
                <% } %> 
                <%if (profile == 'twitter') { %> 
                    <h3 class="text-primary"><span class="fa fa-twitter"></span> twitter</h3>
                <% } %> 
                    <p>
                        <strong>email</strong>: <%= user.email %><br>
                        <strong>name</strong>: <%= name %><br>
                        <strong>pic</strong>: <img src="<%=pic%>" width="100" height="100" alt="">
                    </p>

            </div>
        </div>

    </div>

</div>