<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="compose-title-input">Title</label>
        <input type="text" class="form-control" name="postTitle" id="compose-title-input">
    </div>
    <div class="form-group">
        <label for="compose-body-input">Post</label>
        <textarea class="form-control" id="composeBodyInput" name="postBody" rows="5"></textarea>
    </div>
    <button class="btn btn-primary mb-2" type="submit">Publish</button>
</form>


<%- include("partials/footer") %>